# Safe file deletions 

import os

filename = "temp.log"

try:
    os.remove(filename)
    print(f"âœ… Deleted {filename}")
except FileNotFoundError:
    print(f"âš ï¸ File {filename} does not exist.")
except PermissionError:
    print(f"âŒ No permission to delete {filename}")
